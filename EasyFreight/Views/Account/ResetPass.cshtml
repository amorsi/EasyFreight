@using EasyFreight.Models;
@using Microsoft.AspNet.Identity;
@model EasyFreight.Models.ManageUserViewModel
@{
    ViewBag.Title = "Reset Password";
 Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="page-header">
    <h2>Reset Password</h2>

    <div class="right-wrapper pull-right">
        <ol class="breadcrumbs">
            <li>
                <a href="@Url.Content("~/Home/Index")">
                    <i class="fa fa-home"></i>
                </a>
            </li> 
        </ol>

        <a class="sidebar-right-toggle" data-open="sidebar-right0"><i class="fa fa-chevron-left"></i></a>
    </div>
</header>


<h2>@ViewBag.Title </h2> 

<div class="row">
    <div class="col-md-12">
       
           <p class="text-info">
   You will Reset the password for user : @ViewBag.UserName
</p>

@using (Html.BeginForm("ResetPass", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken() 
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="hidden" value="@ViewBag.hdnFlag" id="hdnFlag" />
            <input type="submit" value="Set password" class="btn btn-default" />
        </div>
    </div>
}



        <section id="externalLogins">
             @*   @Html.Action("RemoveAccountList")
           @Html.Partial("_ExternalLoginsListPartial", new { Action = "LinkLogin", ReturnUrl = ViewBag.ReturnUrl })*@
        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
