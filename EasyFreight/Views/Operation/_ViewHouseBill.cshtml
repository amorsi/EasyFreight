@model EasyFreight.Models.HouseBillView
<section class="panel panel-primary">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#"></a>
            <a href="#"></a>
        </div>
        <h2 class="panel-title">Operation Order</h2>
    </header>
    <div class="panel-body">
        <div class="col-sm-6 col-xs-6  form-group">
            <label class="col-md-5 col-xs-5  control-label">Operation Code</label>
            <div class="col-md-7 col-xs-7  ">
                <span class="text-dark">@Model.OperationCode</span>
            </div>
        </div>
        <div class="col-sm-6 col-xs-6  form-group">
            <label class="col-md-5 col-xs-5  control-label">House Bill</label>
            <div class="col-md-7 col-xs-7  ">
                <span class="text-dark">@Model.HouseBL</span>
            </div>
        </div>

        <div class="col-sm-6 col-xs-6  form-group">
            <label class="col-md-5 col-xs-5  control-label">Department</label>
            <div class="col-md-7 col-xs-7  ">
                @if (Model.OrderFrom == 1)
                {
                    <span class="text-dark">Export</span>
                }
                else
                {
                    <span class="text-dark">Import</span>
                }

            </div>
        </div>
        <div class="col-sm-6 col-xs-6  form-group">
            <label class="col-md-5 col-xs-5  control-label">Create Date</label>
            <div class="col-md-7 col-xs-7  ">
                <span class="text-dark">@Model.OperationDate.Value.ToString("dd/MM/yyyy")</span>
            </div>
        </div>
        <div class="col-sm-6 col-xs-6  form-group">
            <label class="col-md-5 col-xs-5  control-label">Shipper</label>
            <div class="col-md-7 col-xs-7  ">
                <span class="text-dark">@Model.ShipperNameEn</span>
            </div>
        </div>
        <div class="col-sm-6 col-xs-6  form-group">
            <label class="col-md-5 col-xs-5  control-label">Consignee</label>
            <div class="col-md-7 col-xs-7  ">
                <span class="text-dark">@Model.ConsigneeNameEn</span>
            </div>
        </div>
        <div class="col-sm-6 col-xs-6  form-group">
            <label class="col-md-5 col-xs-5  control-label">Agent</label>
            <div class="col-md-7 col-xs-7  ">
                <span class="text-dark">@Model.AgentNameEn</span>
            </div>
        </div>
        <div class="col-sm-6 col-xs-6  form-group">
            <label class="col-md-5 col-xs-5  control-label">Notifier</label>
            <div class="col-md-7 col-xs-7  ">
                @if ((bool)Model.NotifierAsConsignee){
                <span class="text-dark">@Model.ConsigneeNameEn</span>}
                else
                {   <span class="text-dark">@Model.NotifierNameEn</span>  }
            </div>
        </div>
        
    </div>
</section>

<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#"></a>
            <a href="#"></a>
        </div>
        <h2 class="panel-title">Carrier Details</h2>
    </header>
    <div class="panel-body">
        <div class="col-sm-6 col-xs-6  form-group">
            <label class="col-md-5 col-xs-5  control-label">Carrier Type</label>
            <div class="col-md-7 col-xs-7  ">
                <span class="text-dark">@(Model.CarrierType == 1 ? "Sea" : "Air")</span>
            </div>
        </div>
        <div class="col-sm-6 col-xs-6  form-group">
            <label class="col-md-5 col-xs-5  control-label">Carrier</label>
            <div class="col-md-7 col-xs-7  ">
                <span class="text-dark">@Model.CarrierNameEn</span>
            </div>
        </div>
        <div class="col-sm-6 col-xs-6  form-group">
            <label class="col-md-5 col-xs-5  control-label">Port of loading</label>
            <div class="col-md-7 col-xs-7  ">
                <span class="text-dark">@Model.FromPort</span>
            </div>
        </div>
        <div class="col-sm-6 col-xs-6  form-group">
            <label class="col-md-5 col-xs-5  control-label">Port of discharge</label>
            <div class="col-md-7 col-xs-7  ">
                <span class="text-dark">@Model.ToPort</span>
            </div>
        </div>
        <div class="col-sm-6 col-xs-6  form-group">
            <label class="col-md-5 col-xs-5  control-label">Vessel</label>
            <div class="col-md-7 col-xs-7  ">
                <span class="text-dark">@Model.VesselName</span>
            </div>
        </div>
        <div class="col-sm-6 col-xs-6  form-group">
            <label class="col-md-5 col-xs-5  control-label">Incoterm</label>
            <div class="col-md-7 col-xs-7  ">
                <span class="text-dark">@Model.IncotermName</span>
            </div>
        </div>
        <div class="col-sm-6 col-xs-6  form-group">
            <label class="col-md-5 col-xs-5  control-label">Departure Date</label>
            <div class="col-md-7 col-xs-7  ">
                <span class="text-dark">@(Model.DateOfDeparture == null ? "" : Model.DateOfDeparture.Value.ToString("dd/MM/yyyy"))</span>
            </div>
        </div>
        <div class="col-sm-6 col-xs-6  form-group">
            <label class="col-md-5 col-xs-5  control-label">Arrive Date</label>
            <div class="col-md-7 col-xs-7  ">
                <span class="text-dark">@(Model.ArriveDate == null ? "" : Model.ArriveDate.Value.ToString("dd/MM/yyyy"))</span>
            </div>
        </div>
    </div>
</section>

<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#"></a>
            <a href="#"></a>
        </div>
        <h2 class="panel-title">Cargo Summary</h2>
    </header>
    <div class="panel-body">
        <div class="col-sm-3 form-group">
            <label class="col-md-5 col-xs-5  control-label">G.W</label>
            <div class="col-md-7 col-xs-7   input-group mb-md">
                <span class="text-dark">@Model.GrossWeight <span class="sign">KG</span></span>

            </div>
        </div>
        <div class="col-sm-3 form-group">
            <label class="col-md-5 col-xs-5  control-label">N.W</label>
            <div class="col-md-7 col-xs-7   input-group mb-md">
                <span class="text-dark">@Model.NetWeight <span class="sign">KG</span></span>
            </div>
        </div>
        <div class="col-sm-3 form-group">
            <label class="col-md-6 control-label">Packages#</label>
            <div class="col-md-6 input-group mb-md">
                <span class="text-dark">@Model.NumberOfPackages <span class="sign">Item</span></span>
            </div>
        </div>
        <div class="col-sm-3 form-group">
            <label class="col-md-5 col-xs-5  control-label">CBM</label>
            <div class="col-md-7 col-xs-7   input-group mb-md">
                <span class="text-dark">@Model.CBM <span class="sign">m3</span></span>
            </div>
        </div>

        <div class="col-sm-4 col-xs-4 form-group">
            <label class="col-md-5 col-xs-5  control-label">Freight Amount</label>
            <div class="col-md-7 col-xs-7   input-group mb-md">
                <span class="text-dark">@Model.CollectedFreightCost <span class="sign">@Model.FreighCurrency</span></span>
            </div>
        </div>
        <div class="col-sm-4 col-xs-4 form-group">
            <label class="col-md-5 col-xs-5  control-label">THC Cost</label>
            <div class="col-md-7 col-xs-7   input-group mb-md">
                <span class="text-dark">@Model.CollectedThcCost <span class="sign">@Model.ThcCurrency</span></span>
            </div>
        </div>

        <div class="col-sm-4 col-xs-4 form-group">
            <label class="col-sm-6 col-xs-6  control-label">Freight Payment</label>
            <div class="col-sm-6 col-xs-6 ">
                <span class="text-dark">@(Model.IsPrepaid.Value ? "Prepaid" : "Collect")</span>
            </div>
        </div>

        <div class="col-sm-12 col-xs-12 form-group">
            <label class="col-md-3 col-xs-3 control-label">Description of goods</label>
            <div class="col-md-9 col-xs-9">
                <span class="text-dark">@Model.GoodsDescription</span>
            </div>
        </div>

    </div>
</section>