
<form id="searchform" class="form-horizontal mb-lg" novalidate="novalidate">
    <div class="form-group">
        <label class="col-sm-2 control-label">Carrier</label>
        <div class="col-sm-4">
            <select id="CarrierId" name="CarrierId" data-plugin-selecttwo data-placeholder="Select Carrier"
                    class="form-control populate">
                <option></option>
                @foreach (var item in ViewBag.CarrierList)
                {
                    <option value="@item.Key">@item.Value</option>
                }
            </select>

        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Contractor</label>
        <div class="col-sm-4">
            <select id="ContractorId" name="ContractorId" data-plugin-selecttwo data-placeholder="Select Contractor"
                    class="form-control populate">
                <option></option>
                @foreach (var item in ViewBag.ContractorList)
                {
                    <option value="@item.Key">@item.Value</option>
                }
            </select>

        </div>
    </div>
    
    <div class="form-group">
        <label class="col-sm-2 control-label">Order From</label>
        <div class="col-sm-4">
            <select name="OrderFrom" data-plugin-selecttwo data-placeholder="Select Order From"
                     class="form-control populate">
                <option></option>
                <option value="1">Export</option>
                <option value="2">Import</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Create Date</label>
        <div class="col-md-10">
            <div data-plugin-datepicker="" data-date-format="dd/mm/yyyy" class="input-daterange input-group">
                <span class="input-group-addon">
                    <i class="fa fa-calendar"></i>
                </span>
                <input type="text" name="CreateDateStart" class="form-control date">
                <span class="input-group-addon">to</span>
                <input type="text" name="CreateDateEnd" class="form-control date">
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Invoice Date</label>
        <div class="col-md-10">
            <div data-plugin-datepicker=""  class="input-daterange input-group">
                <span class="input-group-addon">
                    <i class="fa fa-calendar"></i>
                </span>
                <input type="text" name="InvoiceDateStart" class="form-control date">
                <span class="input-group-addon">to</span>
                <input type="text" name="InvoiceDateEnd" class="form-control date">
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Due Date</label>
        <div class="col-md-10">
            <div data-plugin-datepicker="" class="input-daterange input-group">
                <span class="input-group-addon">
                    <i class="fa fa-calendar"></i>
                </span>
                <input type="text" name="DueDateStart" class="form-control date">
                <span class="input-group-addon">to</span>
                <input type="text" name="DueDateEnd" class="form-control date">
            </div>
        </div>
    </div>

    <div class="form-group col-sm-6">
        <label class="col-sm-4 control-label">Order status</label>
        <div class="col-sm-8">
            <select name="InvStatusId" data-plugin-selecttwo data-placeholder="Select"
                     class="form-control populate">
                <option></option>
                <option value="2">Approved</option>
                <option value="3">Partially Paid</option>
                <option value="4">Paid</option>
            </select>
        </div>
    </div>

</form>
