                    <h2 class="text-dark text-center"> <br /></h2>
                </div> 
                <div class="col-md-1"></div>


                <div class="col-md-12 form-group ">
                    <table class="table" style="width:60%" >
                        <tr>
                            <td class="col-md-2 col-sm-2 col-lg-2  " style="text-align: left;">الاسكندرية في :</td>
                            <td class="col-md-10 col-sm-10 col-lg-10 " style="text-align:right"><span class="text-dark">@Model.OperationDate.Value.ToString("dd/MM/yyyy")</span></td>
                            
                        </tr> 
                         <tr>
                            <td class="col-md-1 " style="text-align: left;">السادة/ شركة :</td>
                            <td class="col-md-11" style="text-align:right"><span class="text-dark">@(isNotifier == 0 ? Model.ConsigneeNameEn : Model.NotifierNameEn) </span></td>
                        </tr>
                         <tr>
                            <td class="col-md-1 " style="text-align: left;">عناية :</td>
                            <td class="col-md-11" style="text-align:right">Import Department<span class="text-dark"> </span></td>
                        </tr>
                         <tr>
                            <td class="col-md-1 " style="text-align: left;">الموضوع :</td>
                            <td class="col-md-11" style="text-align:right"><span class="text-dark"> رسالة وارد @(Model.CarrierType == 1 ? " بحري " : " طيران ")
                                @Model.FromPort </span></td>
                        </tr>
                        <tr>
                            <td class="col-md-1 " style="text-align: left;">بوليصة رقم :</td>
                            <td class="col-md-11" style="text-align:right"><span class="text-dark">@ViewBag.houseBL </span></td>
                        </tr>
                        <tr>
                            <td class="col-md-1 " colspan="2">تحية طيبة وبعد ؛؛؛؛؛  </td>
                            
                        </tr>
                        
                         <tr>
                            <td class="col-md-1 " colspan="2">نحيطكم علما بأنه سترد لكم رسالة واردة من  @Model.FromPort
                                <br />
                                متوقع الوصول @(Model.ArriveDate != null ? Model.ArriveDate.Value.ToString("dd/MM/yyyy") : "") بيانها كالتالي   </td>
                            
                        </tr>
                        
                        </table> 
                    <table class="table" >
                         <tr>
                            <td class="col-md-1 " colspan="2">
                                <table class="table" style="direction:ltr;  ">

                                    <tbody>
                                        <tr >
                                            <td class="col-md-1 " style="text-align: right;">Shipper :</td>
                                            <td style="text-align: left;">@Model.ShipperNameEn</td>
                                        </tr>
                                        <tr >
                                            <td class="col-md-1 " style="text-align: right;">Cnee :</td>
                                            <td style="text-align: left;">@Model.ConsigneeNameEn</td>
                                        </tr>
                                        <tr >
                                            <td class="col-md-1 " style="text-align: right;">Weight :</td>
                                            <td style="text-align: left;">@Model.NetWeight KGS   
                                                @(Model.CarrierType == 1 ? "": ("Chargable Weight : "+Model.GrossWeight.Value.ToString()+ " KGS"))</td>
                                        </tr>
                                        
                                    </tbody>
                                </table>

                            </td>
                        </tr>

                         <tr>
                            <td class="col-md-1 " colspan="2">
                                لذا نرجو من سيادتكم إرسال مندوبكم لاستلام مستندات الشحن الخاصة بكم
                                @((!Model.IsPrepaid.Value && 
                                ((Model.CollectedFreightCost.HasValue&&Model.CollectedFreightCost.Value >0) ||
                                ( Model.CollectedThcCost.HasValue&&Model.CollectedThcCost.Value > 0))) ? " وسداد المبلغ التالي :" : "")
                            </td> 
                        </tr>
                       @if(!Model.IsPrepaid.Value)
                       {
                           if (Model.CollectedFreightCost.HasValue)
                           {
                               if (Model.CollectedFreightCost.Value > 0)
                           {
                            <tr> 
                            <td class="col-md-1 " > نولون شحن </td>
                             <td class="col-md-11 " >@Model.CollectedFreightCost.Value  @(Model.FreighCurrencyId == 1 ? "EGP" : Model.FreighCurrencyId == 2 ? "USD" : "EUR")</td>
                            </tr>
                         }
                         }
                           if (Model.CollectedThcCost.HasValue)
                           {
                               if (Model.CollectedThcCost.Value > 0)
                           {
                            <tr> 
                            <td class="col-md-1 " colspan="2"> مصاريف ادارية وخطاب تنازل  
                              @Model.CollectedThcCost.Value  @(Model.ThcCurrencyId == 1 ? "EGP" : Model.ThcCurrencyId == 2 ? "USD" : "EUR")</td>
                            </tr>
                         } 
                         }
                       }

                         <tr>
                            <td class="col-md-1" colspan="2" style="direction:ltr;text-align:center  ">
                            ،،،،،،،،،  وتفضلوا بقبول فائق الاحترام  
                            </td> 
                        </tr>

                         <tr>
                             <td class="col-md-1" colspan="2" style="direction:ltr;text-align:left  ">
                              شركة ايه ام كارجو للنقل الدولي
                                
                            </td> 
                        </tr>


                        </table> 
                </div>
            </div>
        </div>

 
    </div>

    <div id="footer">
        @{Html.RenderAction("GetPrintFooter", "Home");}
    </div>
</body>
</html>
