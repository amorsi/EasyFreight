@model List<EasyFreight.ViewModel.AgentNoteVm>

@if (Model.Count == 0)
{
    <div id="agentnotecontent" class="well warning">
        No Agent Notes for this operation.
    </div>
}
else
{
    <section id="agentnotecontent" class="panel">

        <div class="panel-body">
            <div class="table-responsive">
                <table id="tbinvlist" class="table table-striped mb-none">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Note Date</th>
                            <th>Agent</th>
                            <th>Due Date</th>
                            <th>Note Amount</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.AgentNoteCode
                                </td>
                                <td>
                                    @(item.AgentNoteDate == null ? "" : item.AgentNoteDate.Value.ToString("dd/MM/yyyy"))
                                </td>
                                <td>
                                    @item.AgentName
                                </td>
                                <td>
                                    @item.DueDate
                                </td>
                                <td>
                                    @item.CurrencySign  @item.TotalAmount
                                </td>
                                 <td>
                                    @item.InvStatusName  
                                </td>
                                <td>
                                    <a href="@Url.Content("~/AgentNote/ViewNote?id=" + item.AgentNoteId + "&operid=" + item.OperationId)" target="_blank" title="View"
                                       style="padding-left:5px"
                                       class="on-default viewinv"><i class="fa fa-eye"></i></a>
                                    <a href="@Url.Content("~/AgentNote/PrintNote?id=" + item.AgentNoteId + "&operid=" + item.OperationId)" title="Print"
                                       style="padding-left:5px"
                                       class="on-default printinv"><i class="fa fa-print"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>

}
