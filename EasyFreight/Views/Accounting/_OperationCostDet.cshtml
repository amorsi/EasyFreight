@model EasyFreight.ViewModel.OperationCostAccMainVm

<table class="table table-bordered table-striped mb-none" id="OperCostFullTb">
    <thead>
        <tr>
            <th rowspan="2">#</th>
            <th rowspan="2">Cost Name</th>
            <th colspan="2">Net Rate</th>
            <th colspan="2">Selling Rate</th>
            <th colspan="2">Agent</th>

        </tr>
        <tr>
            <th>Amount</th>
            <th>CUR</th>
            <th>Amount</th>
            <th>CUR</th>
            <th>Amount</th>
            <th>CUR</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OperationCostAccVms)
        {
            <tr class="gradeX">
                <td>@item.Id</td>
                <td>@item.CostName</td>
                <td>@item.NetRate</td>
                <td>@item.CurrencySign</td>
                <td>@item.SellingRate </td>
                <td>@item.CurrencySignSelling</td>
                @if (item.IsAgent)
                {
                    <td>@item.SellingRate </td>
                    <td>@item.CurrencySignSelling</td>
                }
            </tr>
        }


    </tbody>
    <tfoot>
        @for (int i = 0; i < Model.OperationCostTotalAccVms.Count; i++)
            {
            <tr>
                <th colspan="2">@(i== 0 ? "Total" : "")</th>
                <th>@Model.OperationCostTotalAccVms[i].TotalNetRate</th>
                <th>@Model.OperationCostTotalAccVms[i].CurrencySign</th>

                <th>@Model.OperationCostTotalAccVms[i].TotalSellingRate</th>
                <th>@Model.OperationCostTotalAccVms[i].CurrencySign</th>

                <th>@Model.OperationCostTotalAccVms[i].TotalAgentRate</th>
                <th>@Model.OperationCostTotalAccVms[i].CurrencySign</th>
            </tr>
                
            }

    </tfoot>
</table>



